@model Personel_MVC_SQL.Models.EntityFramework.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Login","Security",FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <h2 class="text-center text-dark mt-5">Giriş Ekranı</h2>
                    @ViewBag.Mesaj

                    <div class="card my-5">

                        <form class="card-body cardbody-color p-lg-5">

                            <div class="text-center">
                                <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                                     width="200px" alt="profile">
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Ad)
                                @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Sifre)
                                @Html.PasswordFor(m => m.Sifre, new { @class = "form-control", placeholder = "Parola" })
                            </div>
                            <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Giriş</button></div>

                        </form>
                    </div>

                </div>
            </div>
        }

    </div>
</body>
</html>
